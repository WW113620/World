@{
    Layout = null;
    ViewBag.Title = "Contact";
}
@{
    bool isLogin = (bool)ViewBag.IsLogin;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>contact</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/app.v2.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/search.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <style>
        html,
        body {
            background: #000;
            margin: 0;
            padding: 0;
        }

        canvas {
            width: 100%;
            height: 100%;
            position: absolute;
        }

        .set-title {
            font-size: 32px;
            color: #adbece;
            font-family: 'HY NanGTJ';
        }

        .Searchtion {
            position: absolute;
            top: 23%;
            left: 50%;
            width: 90%;
            margin-left: -45%;
        }

        .list-group-item {
            padding-left: 40px;
        }
    </style>
</head>
<body>
    <canvas width="1251" height="920"></canvas>
    <div class="Searchtion">
        <div class="signin-form profile" style="border-radius: 3px;">
            <h2 class="set-title" style="margin-top:0px;text-align:center;">
                Contact to Referral World
            </h2>
            <div class="login-form" style="margin-top: 35px;">
                <ul class="list-group w3-agile" style="text-align: left;">
                    <li class="list-group-item"><strong>Address: </strong> 23 soe Midlokls — UNITED KINGDOM</li>
                    <li class="list-group-item"><strong>Phone number: </strong> 400-888888888</li>
                    <li class="list-group-item"><strong>Email: </strong> info@example.com</li>
                </ul>

            </div>
        </div>
        <div class="main-button-footer" style="margin-top: 100px;text-align: center;">
            @if (isLogin)
            {
                <div class="col-sm-3" onclick="Member()" style="cursor:pointer;" title="Member Profile">
                    <i class="fa fa-3x fa-file-text-o"></i>
                    <h5 class="text-uc m-b m-t-lg">Member Profile</h5>
                </div>
            }
            else
            {
                <div class="col-sm-3" onclick="Login()" style="cursor:pointer;" title="Login">
                    <i class="fa fa-3x fa-user"></i>
                    <h5 class="text-uc m-b m-t-lg">Login/Sign up</h5>
                </div>
            }
            <div class="col-sm-3" onclick="Home()" style="cursor:pointer;" title="Home">
                <i class="fa fa-3x fa-user"></i>
                <h5 class="text-uc m-b m-t-lg">Home</h5>
            </div>
            <div class="col-sm-3" onclick="Search()" style="cursor:pointer;" title="Search">
                <i class="fa fa-3x fa-search"></i>
                <h5 class="text-uc m-b m-t-lg">Search</h5>
            </div>
            <div class="col-sm-3" onclick="About()" style="cursor:pointer;" title="About Us">
                <i class="fa fa-globe fa-3x icon-muted"></i>
                <h5 class="text-uc m-b m-t-lg">About Us</h5>
            </div>
        </div>
    </div>

    <script src="~/Scripts/createCanvas.js"></script>
</body>
</html>
<script>

    function Member() {
        window.location.href = "@Url.Content("~/Member/Index")";
    }
    function Login() {
        window.location.href = "@Url.Content("~/Login/Index")";
    }
    function Home() {
        window.location.href = "@Url.Content("~/Home/Index")";
    }
    function Search() {
        window.location.href = "@Url.Content("~/Search/Index")";
    }
    function About() {
        window.location.href = "@Url.Content("~/Home/About")";
    }
</script>