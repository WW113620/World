@{
    Layout = null;
    ViewBag.Title = "About";
}
@{
    bool isLogin = (bool)ViewBag.IsLogin;
}
<html>
<head>
    <meta charset="utf-8" />
    <title>about</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link href="~/Content/app.v2.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/search.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <style>
        html,
        body {
            background: #000;
            margin: 0;
            padding: 0;
        }

        canvas {
            width: 100%;
            height: 100%;
            position: absolute;
        }
          .Searchtion {
            position: absolute;
            top: 20%;
            left: 50%;
            width: 90%;
            margin-left: -45%;
        }
        .set-title {
            font-size: 32px;
            color: #adbece;
            font-family: 'HY NanGTJ';
        }
        .container a:hover {
            color: #fff;
        }

    </style>
</head>

<body>
    <canvas width="1251" height="920"></canvas>
    <div class="Searchtion">
        <div class="signin-form profile inner_content_w3_agile_info" style="border-radius: 3px; text-indent:2em;">
            <h2 class="set-title" style="margin-top:0px;text-align:center;">
                About to Referral World
            </h2>
            <div class="line line-dashed"></div>
            <div>
                <div class="blank-page agile_info_shadow">
                    <p style="font-size:24px;">About us……how you got started….what are you about….what you stand for as a company….</p>
                </div>
            </div>
        </div>
        <div class="main-button-footer" style="margin-top: 100px;text-align: center;">
            @if (isLogin)
            {
                <div class="col-sm-3" onclick="Member()" style="cursor:pointer;" title="Member Profile">
                    <i class="fa fa-3x fa-file-text-o"></i>
                    <h5 class="text-uc m-b m-t-lg">Member Profile</h5>
                </div>
            }
            else
            {
                <div class="col-sm-3" onclick="Login()" style="cursor:pointer;" title="Login">
                    <i class="fa fa-3x fa-user"></i>
                    <h5 class="text-uc m-b m-t-lg">Login/Sign up</h5>
                </div>
            }
            <div class="col-sm-3" onclick="Home()" style="cursor:pointer;" title="Home">
                <i class="fa fa-3x fa-user"></i>
                <h5 class="text-uc m-b m-t-lg">Home</h5>
            </div>
            <div class="col-sm-3" onclick="Search()" style="cursor:pointer;" title="Search">
                <i class="fa fa-3x fa-search"></i>
                <h5 class="text-uc m-b m-t-lg">Search</h5>
            </div>
            <div class="col-sm-3" onclick="Contact()" style="cursor:pointer;" title="Contact Us">
                <i class="fa fa-envelope-o fa-3x icon-muted"></i>
                <h5 class="text-uc m-b m-t-lg">Contact Us</h5>
            </div>
        </div>
    </div>
    
    <script src="~/Scripts/createCanvas.js"></script>
</body>
</html>
<script>
    function Home() {
        window.location.href = "@Url.Content("~/Home/Index")";
    }
    function Search() {
        window.location.href = "@Url.Content("~/Search/Index")";
    }
    function Contact() {
        window.location.href = "@Url.Content("~/Home/Contact")";
    }

    function Member() {
        window.location.href = "@Url.Content("~/Member/Index")";
    }
    function Login() {
        window.location.href = "@Url.Content("~/Login/Index")";
    }
</script>